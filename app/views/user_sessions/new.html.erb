<div class="container p-5 text-white">
  <div class="border border-white p-5">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <div class="text-center title mb-3">Login</div>
        <%= form_with model: @user, url: login_path, local: true do |f| %>
          <%= f.label :email, class: 'form-label' %>
          <%= f.text_field :email, class: 'form-control' %>
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, class: 'form-control' %>
        <div class="d-flex justify-content-between mt-3">
          <%= link_to "Back", root_path, class: 'btn btn-dark btn-lg my-3 border-white' %>
          <%= f.submit "Confirm", class: 'btn btn-dark btn-lg my-3 border-white' %>
        </div>
        <% end %>
    </div>
  </div>
</div>